class Solution:
    def pivotIndex(self, nums: List[int]) -> int:
        if len(nums) == 0:
            return -1
        if len(nums) == 1:
            return 0
        suml = 0
        sumr = sum(nums) - nums[0]
        if suml == sumr:
            return 0
        for i in range(1, len(nums)):
            suml += nums[i-1]
            sumr -= nums[i]
            if suml == sumr:
                return i
        return -1
