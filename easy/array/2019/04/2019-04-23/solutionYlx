class Solution:
    def findLengthOfLCIS(self, nums: List[int]) -> int:
        if len(nums) == 0:
            return 0
        if len(nums) == 1:
            return 1
        res = 1
        m = 1
        for i in range(1, len(nums)):
            if nums[i] > nums[i-1]:
                res += 1
                m = max(res, m)
            else:
                res = 1
        return m
