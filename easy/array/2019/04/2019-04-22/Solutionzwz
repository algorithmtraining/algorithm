package leetcode;

public class problem551 {
	public boolean checkRecord(String s) {
		int a=0;
		char [] str = s.toCharArray();
		for (int i = 0; i < str.length; i++) {
			if (str[i]=='A') {
				a++;
			}
			if (str[i]=='L'&&(i+1)<str.length&&(i+2)<str.length) {
				if (str[i+1]=='L'&&str[i+2]=='L') {
					return false;
				}
			}
			if (a>1) {
				return false;
			}
		}
		return true;
	}
}
