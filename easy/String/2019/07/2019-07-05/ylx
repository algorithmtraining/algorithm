class Solution:
    def reverseStr(self, s: str, k: int) -> str:
        if len(s) < k:
            return s[::-1]
        elif len(s) >= k and len(s) < 2*k:
            return s[k-1::-1] + s[k:]
        else:
            return s[k-1::-1] + s[k:2*k] + self.reverseStr(s[2*k:], k)

if __name__ == '__main__':
    y = Solution()
    s = "abcdefghijklmn"
    k = 2
    print(y.reverseStr(s, k))
